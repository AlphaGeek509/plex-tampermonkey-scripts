<Project Sdk="Microsoft.NET.Sdk.Web">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
	</PropertyGroup>

	<!-- Clean out any stale includes first -->
	<ItemGroup>
		<!-- Remove any old 'common' or legacy patterns that leaked in -->
		<Content Remove="tm-tdd\**" />
		<None Remove="tm-tdd\**" />
		<TypeScriptCompile Remove="tm-tdd\**" />
		<Content Remove="tm-scripts\src\common\**" />
		<EmbeddedResource Remove="tm-scripts\src\common\**" />
		<!-- Never include node_modules in the project -->
		<None Remove="**\node_modules\**" />
		<Content Remove="**\node_modules\**" />
		<TypeScriptCompile Remove="**\node_modules\**" />
	</ItemGroup>

	<!-- Solution-visible files (not compiled by .NET; just show in Solution Explorer) -->
	<ItemGroup>
		<!-- Top-level repo utilities -->
		<None Include=".version" />
		<None Include="build-plus.js" />
		<None Include=".gitattributes" />
		<None Include=".gitignore" />
		<None Include="README.md" Condition="Exists('README.md')" />

		<!-- Package config and banners -->
		<None Include="tm-scripts\package.json" />
		<None Include="tm-scripts\banners\*.header.js" />

		<!-- Source (show for editing); mark as None so .NET doesnâ€™t try to compile them -->
		<None Include="tm-scripts\src\quote-tracking\**\*.js" />
		<None Include="tm-scripts\src\shared\**\*.js" />
	</ItemGroup>
	<ItemGroup>
	  <Compile Include="Program.fs" />
	</ItemGroup>

</Project>
